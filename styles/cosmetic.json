{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "title": "Cosmetic styles",
  "description": "Cosmetic site",
  "settings": {
    "color": {
      "palette": [
        {
          "color": "#FFAC70",
          "slug": "brandy-accent",
          "name": "Brandy accent"
        },
        {
          "color": "#151617",
          "slug": "brandy-primary-text",
          "name": "Brandy primary text"
        },
        {
          "color": "#718497",
          "slug": "brandy-secondary-text",
          "name": "Brandy secondary text"
        },
        {
          "color": "#E2E8EE",
          "slug": "brandy-border",
          "name": "Brandy border"
        },
        {
          "color": "#ffffff",
          "slug": "brandy-theme-background",
          "name": "Brandy theme background"
        },
        {
          "color": "#151618",
          "slug": "brandy-primary-black",
          "name": "Brandy primary black"
        },
        {
          "color": "#F8FAFC",
          "slug": "brandy-theme-secondary-background",
          "name": "Brandy theme secondary background"
        },
        {
          "color": "#E2E8EF",
          "slug": "brandy-theme-third-background",
          "name": "Brandy theme third background"
        },
        {
          "color": "#EDF3F9",
          "slug": "brandy-theme-fourth-background",
          "name": "Brandy theme fourth background"
        },
        {
          "color": "#EBF5FF",
          "slug": "brandy-theme-fifth-background",
          "name": "Brandy theme fifth background"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFace": [
            {
              "fontFamily": "Prata",
              "fontStyle": "normal",
              "fontWeight": "100 900",
              "src": [
                "file:./[brandy_sites_path]assets/fonts/prata/prata-regular.ttf"
              ]
            }
          ],
          "fontFamily": "\"Prata\", sans-serif",
          "name": "Prata",
          "slug": "prata"
        },
        {
          "fontFace": [
            {
              "fontFamily": "Outfit",
              "fontStyle": "normal",
              "fontWeight": "100 900",
              "src": ["file:./assets/fonts/outfit/outfit-regular.ttf"]
            }
          ],
          "fontFamily": "\"Outfit\", sans-serif",
          "name": "Outfit",
          "slug": "outfit"
        },
        {
          "fontFamily": "-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Oxygen-Sans,Ubuntu,Cantarell,Helvetica Neue,sans-serif",
          "slug": "system-fonts",
          "name": "System fonts"
        }
      ]
    },
    "layout": {
      "contentSize": "960px",
      "wideSize": "1439px"
    },
    "shadow": {
      "presets": [
        {
          "name": "Small",
          "slug": "sm",
          "shadow": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)"
        },
        {
          "name": "Medium",
          "slug": "md",
          "shadow": "0 4px  10px 0 rgba( 0, 0, 0, 0.3 )"
        },
        {
          "name": "Large",
          "slug": "lg",
          "shadow": "0 8px  15px 0 rgba( 0, 0, 0, 0.3 )"
        },
        {
          "name": "Brandy cosmetic shadow 1",
          "slug": "brandy-cosmetic-shadow 1",
          "shadow": "0px 10px 35px 0px #00000008"
        }
      ]
    }
  },
  "styles": {
    "typography": {
      "fontFamily": "var:preset|font-family|outfit"
    },
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var:preset|font-family|prata"
        }
      },
      "button": {
        "color": {
          "background": "#14161C",
          "text": "#ffffff"
        },
        "border": {
          "radius": "12px"
        },
        "spacing": {
          "padding": {
            "left": "24px",
            "right": "24px",
            "top": "10px",
            "bottom": "10px"
          }
        },
        "typography": {
          "fontSize": "16px",
          "fontWeight": "500"
        }
      }
    },
    "blocks": {
      "core/button": {
        "variations": {
          "outline": {
            "color": {
              "background": "#ffffff00"
            },
            "border": {
              "radius": {
                "ref": "styles.elements.button.border.radius"
              },
              "color": "#151617",
              "width": "1.5px"
            }
          }
        }
      }
    }
  }
}

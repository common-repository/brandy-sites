{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "title": "EBook styles",
  "description": "Brandy EBook",
  "settings": {
    "color": {
      "palette": [
        {
          "color": "#FF7F09",
          "slug": "brandy-accent",
          "name": "Brandy accent"
        },
        {
          "color": "#0C0C0C",
          "slug": "brandy-primary-text",
          "name": "Brandy primary text"
        },
        {
          "color": "#64748B",
          "slug": "brandy-secondary-text",
          "name": "Brandy secondary text"
        },
        {
          "color": "#DFE3E7",
          "slug": "brandy-border",
          "name": "Brandy border"
        },
        {
          "color": "#FFFFFF",
          "slug": "brandy-theme-background",
          "name": "Brandy theme background"
        },
        {
          "color": "#122941",
          "slug": "brandy-primary-black",
          "name": "Brandy primary black"
        },
        {
          "color": "#f5f5f5",
          "slug": "brandy-theme-secondary-background",
          "name": "Brandy theme secondary background"
        },
        {
          "color": "#F8F9FA",
          "slug": "brandy-theme-third-background",
          "name": "Brandy theme third background"
        },
        {
          "color": "#EDF3F9",
          "slug": "brandy-theme-fourth-background",
          "name": "Brandy theme fourth background"
        },
        {
          "color": "#EBF5FF",
          "slug": "brandy-theme-fifth-background",
          "name": "Brandy theme fifth background"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFace": [
            {
              "fontFamily": "Alice",
              "fontStyle": "normal",
              "fontWeight": "100 900",
              "src": [
                "file:./[brandy_sites_path]assets/fonts/alice/alice-regular.ttf"
              ]
            }
          ],
          "fontFamily": "\"Alice\", serif",
          "name": "Alice",
          "slug": "alice"
        },
        {
          "fontFace": [
            {
              "fontFamily": "Outfit",
              "fontStyle": "normal",
              "fontWeight": "100 900",
              "src": ["file:./assets/fonts/outfit/outfit-regular.ttf"]
            }
          ],
          "fontFamily": "\"Outfit\", sans-serif",
          "name": "Outfit",
          "slug": "outfit"
        },
        {
          "fontFamily": "-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Oxygen-Sans,Ubuntu,Cantarell,Helvetica Neue,sans-serif",
          "slug": "system-fonts",
          "name": "System fonts"
        }
      ]
    },
    "layout": {
      "contentSize": "960px",
      "wideSize": "1170px"
    },
    "shadow": {
      "presets": [
        {
          "name": "Small",
          "slug": "sm",
          "shadow": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)"
        },
        {
          "name": "Medium",
          "slug": "md",
          "shadow": "0 4px  10px 0 rgba( 0, 0, 0, 0.3 )"
        },
        {
          "name": "Large",
          "slug": "lg",
          "shadow": "0 8px  15px 0 rgba( 0, 0, 0, 0.3 )"
        },
        {
          "name": "Brandy ebook shadow 1",
          "slug": "brandy-ebook-shadow",
          "shadow": "7px 7px 7px 0px #1516171A"
        },
        {
          "name": "Brandy ebook shadow 2",
          "slug": "brandy-ebook-shadow-2",
          "shadow": "0px 7px 35px 0px #0000000D"
        },
        {
          "name": "Brandy ebook shadow 3",
          "slug": "brandy-ebook-shadow-3",
          "shadow": "0px 5px 25px 0px #377E620D"
        },
        {
          "name": "Brandy ebook shadow 4",
          "slug": "brandy-ebook-shadow-4",
          "shadow": "0px 6px 12px 0px #94A3B826"
        }
      ]
    }
  },
  "styles": {
    "typography": {
      "fontFamily": "var:preset|font-family|outfit"
    },
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var:preset|font-family|alice",
          "fontWeight": "500"
        }
      },
      "button": {
        "border": {
          "radius": "16px"
        },
        "typography": {
          "fontSize": "16px",
          "fontWeight": "400"
        },
        "color": {
          "text": "var:preset|color|white",
          "background": "var:preset|color|brandy-primary-text"
        }
      }
    },
    "blocks": {
      "woocommerce/product-button": {
        "shadow": "var(--wp--preset--shadow--brandy-book-shadow)",
        "css": "&:hover{background: var(--wp--preset--color--brandy-primary-text) !important; color: #ffffff !important; }"
      }
    }
  }
}

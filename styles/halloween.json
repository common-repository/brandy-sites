{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "title": "Halloween styles",
  "description": "Halloween site",
  "settings": {
    "color": {
      "palette": [
        {
          "color": "#E26B0F",
          "slug": "brandy-accent",
          "name": "Brandy accent"
        },
        {
          "color": "#E0E3EC",
          "slug": "brandy-primary-text",
          "name": "Brandy primary text"
        },
        {
          "color": "#A8AEAE",
          "slug": "brandy-secondary-text",
          "name": "Brandy secondary text"
        },
        {
          "color": "#A7A9B01A",
          "slug": "brandy-border",
          "name": "Brandy border"
        },
        {
          "color": "#15161A",
          "slug": "brandy-theme-background",
          "name": "Brandy theme background"
        },
        {
          "color": "#0A1B2B",
          "slug": "brandy-theme-secondary-background",
          "name": "Brandy theme secondary background"
        },
        {
          "color": "#151618",
          "slug": "brandy-primary-black",
          "name": "Brandy primary black"
        },
        {
          "color": "#000000",
          "slug": "brandy-theme-third-background",
          "name": "Brandy theme third background"
        },
        {
          "color": "#0A1B2B",
          "slug": "brandy-theme-fourth-background",
          "name": "Brandy theme fourth background"
        },
        {
          "color": "#143351",
          "slug": "brandy-theme-fifth-background",
          "name": "Brandy theme fifth background"
        }
      ],
      "duotone": [
        {
          "colors": ["#ffffff", "#111D27"],
          "slug": "brandy-white-and-black",
          "name": "Brandy white and black"
        },
        {
          "colors": ["#111D27", "#ffffff"],
          "slug": "brandy-black-and-white",
          "name": "Brandy black and white"
        },
        {
          "colors": ["#E0E3EC", "#15161A"],
          "slug": "brandy-primary-and-dark",
          "name": "Brandy primary and dark"
        },
        {
          "colors": ["#A8AEAE", "#15161A"],
          "slug": "brandy-secondary-and-dark",
          "name": "Brandy secondary and darl"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFace": [
            {
              "fontFamily": "Chelsea Market",
              "fontStyle": "normal",
              "fontWeight": "100 900",
              "src": [
                "file:./[brandy_sites_path]assets/fonts/chelsea-market/chelsea-market-regular.ttf"
              ]
            }
          ],
          "fontFamily": "\"Chelsea Market\", system-ui",
          "name": "Chelsea Market",
          "slug": "chelsea-market"
        },
        {
          "fontFace": [
            {
              "fontFamily": "Lexend",
              "fontStyle": "normal",
              "fontWeight": "100 900",
              "src": [
                "file:./[brandy_sites_path]assets/fonts/lexend/lexend-regular.ttf"
              ]
            }
          ],
          "fontFamily": "\"Lexend\", sans-serif",
          "name": "Lexend",
          "slug": "lexend"
        },
        {
          "fontFamily": "-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Oxygen-Sans,Ubuntu,Cantarell,Helvetica Neue,sans-serif",
          "slug": "system-fonts",
          "name": "System fonts"
        }
      ]
    },
    "layout": {
      "contentSize": "960px",
      "wideSize": "1440px"
    },
    "spacing": {
      "spacingSizes": [
        {
          "name": "1",
          "size": "min(1rem, 1vw)",
          "slug": "10"
        },
        {
          "name": "2",
          "size": "min(1.5rem, 2vw)",
          "slug": "20"
        },
        {
          "name": "3",
          "size": "min(2rem, 5vw)",
          "slug": "30"
        },
        {
          "name": "4",
          "size": "min(2.5rem, 6vw)",
          "slug": "40"
        },

        {
          "name": "5",
          "size": "min(4rem, 8vw)",
          "slug": "50"
        },
        {
          "name": "6",
          "size": "min(7.5rem, 10vw)",
          "slug": "60"
        },
        {
          "name": "7",
          "size": "min(9.3rem, 18vw)",
          "slug": "70"
        }
      ]
    }
  },
  "styles": {
    "typography": {
      "fontFamily": "var:preset|font-family|lexend"
    },
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var:preset|font-family|chelsea-market"
        }
      },
      "button": {
        "spacing": {
          "padding": {
            "left": "24px",
            "right": "24px",
            "top": "13px",
            "bottom": "13px"
          }
        },
        "typography": {
          "fontSize": "16px",
          "fontWeight": "500"
        }
      }
    },
    "blocks": {
      "core/tag-cloud": {
        "elements": {
          "link": {
            "color": {
              "text": "var:preset|color|brandy-secondary-text",
              "background": "#000000"
            },
            "border": {
              "radius": "7px"
            },
            "spacing": {
              "margin": {
                "top": "0px",
                "left": "0px",
                "right": "0px",
                "bottom": "0px"
              },
              "padding": {
                "top": "0.5rem",
                "bottom": "0.5rem",
                "left": "0.75rem",
                "right": "0.75rem"
              }
            },
            ":hover": {
              "color": {
                "text": "var:preset|color|brandy-primary-text"
              }
            }
          }
        },
        "variations": {
          "outline": {
            "typography": {
              "fontSize": "14px"
            }
          }
        }
      },
      "core/button": {
        "variations": {
          "outline": {
            "color": {
              "text": "var:preset|color|brandy-secondary-text",
              "background": "#ffffff00"
            },
            "border": {
              "width": "1px",
              "color": "var:preset|color|brandy-secondary-text"
            },
            "spacing": {
              "padding": {
                "left": "22px",
                "right": "22px",
                "top": "11px",
                "bottom": "11px"
              }
            }
          }
        }
      }
    }
  }
}

{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "title": "Jewelry Dark styles",
  "description": "Brandy Jewelry Dark site",
  "settings": {
    "color": {
      "palette": [
        {
          "color": "#377E62",
          "slug": "brandy-accent",
          "name": "Brandy accent"
        },
        {
          "color": "#D6E0E9",
          "slug": "brandy-primary-text",
          "name": "Brandy primary text"
        },
        {
          "color": "#5A6D80",
          "slug": "brandy-secondary-text",
          "name": "Brandy secondary text"
        },
        {
          "color": "#182937",
          "slug": "brandy-border",
          "name": "Brandy border"
        },
        {
          "color": "#060E16",
          "slug": "brandy-theme-background",
          "name": "Brandy theme background"
        },
        {
          "color": "#122941",
          "slug": "brandy-primary-black",
          "name": "Brandy primary black"
        },
        {
          "color": "#0A1B2A",
          "slug": "brandy-theme-secondary-background",
          "name": "Brandy theme secondary background"
        },
        {
          "color": "#000000",
          "slug": "brandy-theme-third-background",
          "name": "Brandy theme third background"
        },
        {
          "color": "#0A1B2B",
          "slug": "brandy-theme-fourth-background",
          "name": "Brandy theme fourth background"
        },
        {
          "color": "#143351",
          "slug": "brandy-theme-fifth-background",
          "name": "Brandy theme fifth background"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFace": [
            {
              "fontFamily": "Prata",
              "fontStyle": "normal",
              "fontWeight": "100 900",
              "src": [
                "file:./[brandy_sites_path]assets/fonts/prata/prata-regular.ttf"
              ]
            }
          ],
          "fontFamily": "\"Prata\", sans-serif",
          "name": "Prata",
          "slug": "prata"
        },
        {
          "fontFace": [
            {
              "fontFamily": "Outfit",
              "fontStyle": "normal",
              "fontWeight": "100 900",
              "src": ["file:./assets/fonts/outfit/outfit-regular.ttf"]
            }
          ],
          "fontFamily": "\"Outfit\", sans-serif",
          "name": "Outfit",
          "slug": "outfit"
        },
        {
          "fontFamily": "-apple-system,BlinkMacSystemFont,Segoe UI,Roboto,Oxygen-Sans,Ubuntu,Cantarell,Helvetica Neue,sans-serif",
          "slug": "system-fonts",
          "name": "System fonts"
        }
      ]
    },
    "layout": {
      "contentSize": "960px",
      "wideSize": "1440px"
    },
    "spacing": {
      "spacingSizes": [
        {
          "name": "1",
          "size": "min(1rem, 1vw)",
          "slug": "10"
        },
        {
          "name": "2",
          "size": "min(1.5rem, 2vw)",
          "slug": "20"
        },
        {
          "name": "3",
          "size": "min(2rem, 5vw)",
          "slug": "30"
        },
        {
          "name": "4",
          "size": "min(2.5rem, 6vw)",
          "slug": "40"
        },

        {
          "name": "5",
          "size": "min(4.5rem, 8vw)",
          "slug": "50"
        },
        {
          "name": "6",
          "size": "min(7rem, 10vw)",
          "slug": "60"
        },
        {
          "name": "7",
          "size": "min(9.3rem, 18vw)",
          "slug": "70"
        }
      ]
    },
    "shadow": {
      "presets": [
        {
          "name": "Small",
          "slug": "sm",
          "shadow": "0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06)"
        },
        {
          "name": "Medium",
          "slug": "md",
          "shadow": "0 4px  10px 0 rgba( 0, 0, 0, 0.3 )"
        },
        {
          "name": "Large",
          "slug": "lg",
          "shadow": "0 8px  15px 0 rgba( 0, 0, 0, 0.3 )"
        },
        {
          "name": "Shadow 1",
          "slug": "shadow_1",
          "shadow": "0px 5px 25px 0px #377E620D"
        }
      ]
    }
  },
  "styles": {
    "typography": {
      "fontFamily": "var:preset|font-family|outfit"
    },
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var:preset|font-family|prata"
        }
      },
      "button": {
        "border": {
          "radius": "5px"
        },
        "spacing": {
          "padding": {
            "left": "30px",
            "right": "30px",
            "top": "13px",
            "bottom": "13px"
          }
        },
        "typography": {
          "fontSize": "16px",
          "fontWeight": "500",
          "lineHeight": "1"
        }
      }
    },
    "blocks": {
      "core/tag-cloud": {
        "elements": {
          "link": {
            "color": {
              "text": "var:preset|color|brandy-secondary-text",
              "background": "#000000"
            },
            "border": {
              "radius": "7px"
            },
            "spacing": {
              "margin": {
                "top": "0px",
                "left": "0px",
                "right": "0px",
                "bottom": "0px"
              },
              "padding": {
                "top": "0.5rem",
                "bottom": "0.5rem",
                "left": "0.75rem",
                "right": "0.75rem"
              }
            },
            ":hover": {
              "color": {
                "text": "var:preset|color|brandy-primary-text"
              }
            }
          }
        },
        "variations": {
          "outline": {
            "typography": {
              "fontSize": "14px"
            }
          }
        }
      },
      "core/button": {
        "variations": {
          "outline": {
            "color": {
              "text": "var:preset|color|brandy-primary-text",
              "background": "transparent"
            },
            "shadow": "var(--outline-button-box-shadow)",
            "border": {
              "width": "1px",
              "style": "solid",
              "color": "#445B70"
            }
          }
        }
      }
    }
  }
}
